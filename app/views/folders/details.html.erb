<h2><%= @current_folder.name %> Details</h2>
<% if @current_folder.parent %>
  <p>
    <strong>Parent:</strong>  
    <%= link_to @current_folder.parent.name, folder_details_path(@current_folder.parent) %>
  </p>
<% end %>
<p>
	<% if @current_folder.user %>
  		<strong>Created By:</strong>
  		<%= link_to @current_folder.user.name, @current_folder.user %>
  	<% end %>
</p>

<strong>Permissions:</strong>

<%= render(:partial => "assets/folderPermissions", :object => @current_folder) %>